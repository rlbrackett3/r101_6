<h1>Topics:</h1>
	<ul>
		<%@topics.each do |i| %>
		
		<li><%=i.title%> | 
			
				<%=link_to "View",topic_path(i)%> | 
				<%=link_to "Edit",edit_topic_path(i)%> | 
				<%=link_to "Delete",topic_path(i), method: "delete", data:{ confirm: "Are you sure?"}%> | 

			Created at <%=i.created_at%> |
			by 	<%=link_to "#{User.where(id:i.user_id).first.username}",user_path(i.user_id)%>
		</li>
		
		<%end%>
	</ul>

<%=link_to "create new topic",new_topic_path(@topic)%>